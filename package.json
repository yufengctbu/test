{
    "name": "creator-url-resolver",
    "version": "1.0.0",
    "description": "Cocos Creator 服务端相关代码",
    "main": "index.js",
    "scripts": {
        "build": "tsc && node ./scripts/build.js",
        "test": "jest",
        "test:cov": "jest --coverage",
        "ci": "npm install && npm run build && npm run test",
        "prepare": "husky install"
    },
    "url-resolver": {
        "version": "1.0.0",
        "routers": [
            {
                "mount": "creator/manual",
                "pipe": {
                    "file": "dist/manual/manual.js",
                    "method": "parseManual"
                },
                "config": "dist/manual/manual.json5"
            }
        ]
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/jest": "^29.5.7",
        "@types/semver": "^7.5.4",
        "@typescript-eslint/eslint-plugin": "^6.9.1",
        "@typescript-eslint/parser": "^6.9.1",
        "copyfiles": "^2.4.1",
        "eslint": "^8.52.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.1",
        "husky": "^8.0.3",
        "jest": "^29.7.0",
        "lint-staged": "^15.1.0",
        "prettier": "^3.1.0",
        "ts-jest": "^29.1.1",
        "typescript": "^5.2.2"
    },
    "dependencies": {
        "semver": "^7.5.4"
    },
    "lint-staged": {
        "source/**/*.js": "eslint --cache --fix",
        "source/**/*.(ts|json5)": [
            "prettier --write",
            "npm run build"
        ]
    }
}
